<%- include("_header") %>

<body>
  <h1>Edit</h1>

  <form
    action="/product/update/<%= product.id %>"
    method="POST"
  >
    <div class="form-horizontal">
      <div class="form-group row">
        <label
          for="name"
          class="cool-form-label col-sm-2"
        >
          Name
        </label>
        <div class="col-sm-8">
          <input
            class="form-control"
            id="name"
            name="name"
            type="text"
            value="<%= product.name %>"
            placeholder="Name ..."
          />
        </div>
      </div>

      <div class="form-group row">
        <label
          for="quantity"
          class="cool-form-label col-sm-2"
        >
          Quantity
        </label>
        <div class="col-sm-8">
          <input
            class="form-control"
            id="quantity"
            name="quantity"
            value="<%= product.quantity %>"
            type="number"
            placeholder="Quantity ..."
          />
        </div>
      </div>

      <div class="form-group row">
        <label
          for="price"
          class="cool-form-label col-sm-2"
        >
          Price
        </label>
        <div class="col-sm-8">
          <input
            class="form-control"
            id="price"
            name="price"
            value="<%= product.price %>"
            type="number"
            placeholder="Price ..."
          />
        </div>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-8">
        <input type="submit" class="btn btn-success">
        <a href="/product" class="btn btn-outilne-dark">Annuler</a>
      </div>
    </div>
  </form>
</body>

<%- include("_footer") %>
