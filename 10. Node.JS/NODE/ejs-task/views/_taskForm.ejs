  <div class="form-group">
    <label for="start_date">Start Date</label>
    <input
      type="date"
      class="form-control"
      id="start_date"
      name="start_date"
      value="<%= typeof task != 'undefined' ? task.end_date_formated : '' %>"
    />
  </div>

  <div class="form-group">
    <label for="end_date">End Date</label>
    <input
      type="date"
      class="form-control"
      id="end_date"
      name="end_date"
      value="<%= typeof task != 'undefined' ? task.start_date_formated : '' %>"
    />
  </div>

  <div class="form-group">
    <label for="title">Title</label>
    <input
      type="text"
      class="form-control"
      id="title"
      name="title"
      value="<%= typeof task != 'undefined' ? task.title : '' %>"
    />
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <textarea
      class="form-control"
      id="description"
      name="description"
      rows="3"
    >
      <%= typeof task != 'undefined' ? task.description : '' %>
      </textarea
    >
  </div>

  <div class="form-group">
    <input type="submit" class="btn btn-primary">
  </div>
