package ex2;

/**
 * Représente un compte de dépôt courant
 * 
 * @author RichardBONNAMY
 *
 */
public class CompteCourant extends CompteBancaire {

	/**
	 * Constructeur
	 * 
	 * @param solde     solde
	 * @param decouvert découvert autorisé
	 */
	public CompteCourant(double solde, double decouvert) {
		super(solde, decouvert);
	}

	@Override
	public void debiterMontant(double montant) {
		//modification de l'operation > a < pour que le if soit passant
		//Si le solde - le montant a debiter est inferieur a le solde actuel - le montant + les decouverts autorise
		if (this.solde - montant < this.solde - montant + this.decouvert) {
			System.out.println("if");
			this.solde = solde - montant;
		}else {
			System.out.println("Vous ne pouvez pas retirer cette somme car cela depasse votre decouvert");
		}
	}

}
